# Server Configuration
PORT=3000

# Home Assistant Configuration
# Replace with your Home Assistant URL (e.g., http://192.168.1.100:8123)
HA_BASE_URL=http://homeassistant.local:8123

# Long-lived Access Token from Home Assistant Profile
HA_ACCESS_TOKEN=your_long_lived_access_token_here

# Mock Mode (true/false) - Set to true to use sample data without HA connection
MOCK_MODE=true

# RSS Feed URL (Optional, defaults to Google News)
RSS_FEED_URL=https://news.google.com/rss
